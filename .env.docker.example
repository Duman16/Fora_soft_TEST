# Пример конфигурации для Docker продакшена
# Скопируйте в .env и измените значения

# Database Configuration (для использования внутри Docker)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=change_me_in_production
DB_DATABASE=crm_db

# JWT Configuration
JWT_SECRET=change-this-to-a-very-long-random-string-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=change-this-to-another-very-long-random-string
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
PORT=3000
NODE_ENV=production